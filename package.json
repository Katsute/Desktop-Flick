{
    "name": "desktopflick",
    "version": "1.0.0",
    "description": "Finally, a Japanese flick keyboard for deskop.",
    "main": "dist/main.js",
    "scripts": {
        "// -- clean dev -- //": "",
        "clean": "rimraf dist & rimraf out",
        "// -- build -- //": "",
        "build:typescript": "tsc --outDir dist",
        "build": "npm run build.js && npm run build:typescript",
        "prepare": "npm run clean && npm run build",
        "// -- run -- //": "",
        "start:dev": "npm run prepare && electron .",
        "start:forge": "npm run prepare && electron-forge start",
        "start": "electron-forge start",
        "// -- test -- //": "",
        "test": "echo \"Error: no test specified\" && exit 1",
        "// -- deploy -- //": "",
        "package": "npm run clean && electron-forge package",
        "make": "npm run clean && electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Katsute/DesktopFlick.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/Katsute/DesktopFlick/issues"
    },
    "homepage": "https://github.com/Katsute/DesktopFlick#readme",
    "dependencies": {
        "robotjs": "^0.6.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "electron": "^12.0.0",
        "rimraf": "^3.0.2",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3"
    }
}
