{
    "name": "desktop-flick",
    "version": "1.0.0",
    "description": "Finally, a Japanese flick keyboard for deskop.",
    "private": true,
    "main": "dist/desktop/main.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "rimraf dist & rimraf out & rimraf config.json",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update",
        "// -- build -- //": "",
        "rebuild": "electron-rebuild",
        "build:cp": "copyfiles -u 1 src/**/*.html dist && copyfiles icon.ico dist",
        "build:sass": "sass src:dist/",
        "build:typescript": "tsc --outDir dist",
        "build": "run-p build:**",
        "prepare": "npm run clean && npm run build",
        "// -- run -- //": "",
        "start:dev": "npm run clean && npm run build && electron .",
        "start:forge": "npm run prepare && electron-forge start",
        "start": "electron-forge start",
        "// -- test -- //": "",
        "test": "echo \"Error: no test specified\" && exit 1",
        "// -- deploy -- //": "",
        "package": "npm run prepare && electron-forge package",
        "make": "npm run prepare && electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Katsute/DesktopFlick.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/Katsute/DesktopFlick/issues"
    },
    "homepage": "https://github.com/Katsute/DesktopFlick#readme",
    "dependencies": {
        "@nut-tree/nut-js": "^1.6.1-next.20210408195718",
        "electron-squirrel-startup": "^1.0.0",
        "qrcode": "^1.4.4"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@types/qrcode": "^1.4.0",
        "copyfiles": "^2.4.1",
        "electron": "^12.0.7",
        "electron-rebuild": "^2.3.5",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "sass": "^1.32.12",
        "tslint": "^6.1.3",
        "typescript": "^4.2.4"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "Desktop-Flick",
                "icon": "icon.ico",
                "appCopyright": "Â© Katsute 2021",
                "ignore": [
                    "^/\\.github",
                    "^/src",
                    "^/tsconfig.json",
                    "^\\.gitignore"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Desktop-Flick",
                        "setupIcon": "icon.ico"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip"
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {},
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {},
                    "platforms": [
                        "darwin"
                    ]
                }
            ]
        }
    }
}
