{
    "name": "desktopflick",
    "version": "1.0.0",
    "description": "Finally, a Japanese flick keyboard for deskop.",
    "private": true,
    "main": "dist/desktop/main.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "rimraf dist & rimraf out",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update",
        "// -- build -- //": "",
        "rebuild": "npm rebuild --runtime=electron --target=12.0.1 --disturl=https://atom.io/download/atom-shell --abi=83",
        "build:cp": "copyfiles -u 1 src/**/*.html dist && copyfiles icon.ico dist",
        "build:sass": "sass src:dist/",
        "build:typescript": "tsc --outDir dist",
        "build": "npm run build:typescript && npm run build:sass && npm run build:cp",
        "prepare": "npm run clean && npm run build && npm run rebuild",
        "// -- run -- //": "",
        "start:dev": "npm run clean && npm run build && electron .",
        "start:forge": "npm run prepare && electron-forge start",
        "start": "electron-forge start",
        "// -- test -- //": "",
        "test": "echo \"Error: no test specified\" && exit 1",
        "// -- deploy -- //": "",
        "package": "electron-forge package",
        "make": "electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Katsute/DesktopFlick.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/Katsute/DesktopFlick/issues"
    },
    "homepage": "https://github.com/Katsute/DesktopFlick#readme",
    "dependencies": {
        "clipboardy": "^2.3.0",
        "electron-squirrel-startup": "^1.0.0",
        "qrcode": "^1.4.4",
        "robotjs": "^0.6.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@types/qrcode": "^1.4.0",
        "copyfiles": "^2.4.1",
        "electron": "^12.0.2",
        "rimraf": "^3.0.2",
        "sass": "^1.32.11",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "desktopflick"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
